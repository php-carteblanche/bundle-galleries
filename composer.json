{
    "name": "carte-blanche/bundle-galleries",
    "type": "carte-blanche-bundle",
    "description": "A special bundle to build medias galleries",
    "keywords": [ "carte blanche", "bundles" ],
    "homepage": "http://github.com/php-carteblanche/bundle-galleries",
    "license": "Apache-2.0",
    "authors": [{
        "name": "Les Ateliers Pierrot & contributors",
        "email": "contact@ateliers-pierrot.fr",
        "homepage": "http://www.ateliers-pierrot.fr/"
    }],
    "require": {
        "carte-blanche/core": "dev-master",
        "carte-blanche/installer": "dev-master"
    },
    "autoload": { 
        "psr-0": { "Galleries": "src" },
        "classmap": [ "src/Galleries/Controller" ]
    },
    "repositories": [{
        "type": "composer", "url": "http://packagist.ateliers-pierrot.fr/"
    }],
    "extra": {
        "assets-dir": "www",
        "views": "src/Galleries/views",
        "views-functions": "src/Galleries/views_functions.php",
        "carte-blanche-configs": "config/galleries_config.ini",
        "branch-alias": {
            "dev-master": "0.1-dev"
        }
    }
}
